.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 600rpx;
  margin: 80rpx auto 0;
  padding-bottom: 120rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  text-align: center;
}

.primary-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #FF2D83;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-bottom: 80rpx;
  text-align: center;
  border: none;
}

.primary-button::after {
  border: none;
}

.secondary-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
  text-align: center;
  border: none;
}

.secondary-button::after {
  border: none;
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.tip-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
  text-align: center;
}