.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

/* 导航栏操作按钮 */
.nav-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.delete-btn {
  padding: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  min-width: 60rpx;
  min-height: 60rpx;
  transition: all 0.2s ease;
}

.delete-btn:active {
  background-color: rgba(255, 59, 48, 0.2);
  transform: scale(0.95);
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(1.2);
}

/* 照片容器 */
.photo-container {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 80rpx;
  min-height: 60vh;
}

.photo {
  max-width: 100%;
  max-height: 100%;
  border-radius: 20rpx;
}

.crown-icon {
  position: absolute;
  top: 60rpx;
  right: 60rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 2;
}

/* 信息区域 */
.info-section {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.like-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.heart-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.like-count {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.photo-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 评论区域 */
.comments-section {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  flex: 1;
}

.section-title {
  margin-bottom: 30rpx;
}

.section-title text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #333333;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.username {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.comment-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.empty-comments {
  text-align: center;
  padding: 60rpx 0;
}

.empty-comments text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}