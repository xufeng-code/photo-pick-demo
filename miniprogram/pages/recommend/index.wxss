.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

.title {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-bottom: 40rpx;
  text-align: center;
  padding: 0 32rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: calc(88rpx + env(safe-area-inset-bottom) + 80rpx);
}

.photo-container {
  width: 90%;
  max-width: 710rpx; /* 基于5184:3456比例计算的最大宽度 */
  position: relative;
  margin: 80rpx auto 40rpx auto;
  overflow: hidden;
  border-radius: 20rpx;
  border: 4rpx solid #FF2D83;
  box-sizing: border-box;
  padding: 0;
  aspect-ratio: 3/2; /* 5184:3456 = 3:2 比例 */
}

.photo {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 16rpx;
  object-fit: cover; /* 改为cover确保照片布满容器 */
  background-color: #111111;
  position: absolute;
  top: 0;
  left: 0;
}

.crown-icon {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
}

.tag-container {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 左对齐 */
  padding: 0 32rpx;
  width: 100%;
}

.tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: rgba(255, 45, 131, 0.1);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #FF2D83;
}

.description {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  text-align: left; /* 改为左对齐 */
  padding: 0 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  width: calc(100% - 64rpx);
  height: 88rpx;
  line-height: 88rpx;
  background: #FF2D83;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  text-align: center;
  margin: 60rpx 32rpx 60rpx;
  border: none;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  left: 32rpx;
  right: 32rpx;
  width: calc(100% - 64rpx);
}

.action-button::after {
  border: none;
}

.demo-notice {
  color: #FF9500;
  font-size: 24rpx;
  text-align: center;
  margin: 20rpx 32rpx;
  padding: 16rpx;
  background-color: rgba(255, 149, 0, 0.1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 149, 0, 0.3);
}

/* 全屏模式样式 */
.fullscreen-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.fullscreen-modal.show {
  opacity: 1;
  visibility: visible;
}

.fullscreen-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fullscreen-image {
  max-width: 100vw;
  max-height: 100vh;
  width: auto;
  height: auto;
  object-fit: contain;
  display: block;
}

.fullscreen-close {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 40rpx);
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
}

.fullscreen-close image {
  width: 48rpx;
  height: 48rpx;
  filter: invert(1);
}

/* 响应式设计 - 适配不同屏幕尺寸 */
@media (max-width: 750rpx) {
  .photo-container {
    width: 95%;
    max-width: 90vw;
  }
}

@media (max-height: 1200rpx) {
  .photo-container {
    max-width: 85vw;
    margin: 60rpx auto 30rpx auto;
  }
  
  .description {
    font-size: 26rpx;
    margin-top: 20rpx;
  }
  
  .tag {
    font-size: 26rpx;
    padding: 10rpx 28rpx;
  }
}

/* 超大屏幕适配 */
@media (min-width: 1200rpx) {
  .photo-container {
    max-width: 600rpx;
  }
}