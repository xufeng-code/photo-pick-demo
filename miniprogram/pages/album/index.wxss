.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 40rpx;
  box-sizing: border-box;
  padding-top: calc(88rpx + env(safe-area-inset-top) + 20rpx);
}

/* 导航栏右侧区域 */
.nav-right-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 导航栏分享按钮 */
.nav-share-btn {
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff4d94;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 999;
  cursor: pointer;
  border: none;
  box-sizing: border-box;
}

.nav-share-btn::after {
  border: none;
}

.nav-share-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1); /* 将图标变为白色 */
}

.share-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 三列网格布局 - 优化版本 */
.photos-grid {
  display: grid !important;
  grid-template-columns: repeat(3, 1fr) !important;
  gap: 20rpx !important; /* 增加间距从10rpx到20rpx */
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx; /* 添加左右内边距 */
  margin-top: 40rpx;
}

/* 响应式设计：在更大屏幕上显示更多列 */
@media (min-width: 750px) {
  .photos-grid {
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 24rpx !important;
  }
}

@media (min-width: 1000px) {
  .photos-grid {
    grid-template-columns: repeat(5, 1fr) !important;
    gap: 28rpx !important;
  }
}

.photo-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 16rpx; /* 增加圆角从12rpx到16rpx */
  overflow: hidden;
  background-color: #111111;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease; /* 添加过渡效果 */
}

/* 添加悬停效果 */
.photo-item:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(255, 77, 148, 0.3);
}

.photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0; /* 移除图片的圆角，只在容器上设置 */
}

/* 皇冠图标（最佳照片） - 优化位置 */
.crown-icon {
  position: absolute;
  top: 12rpx; /* 增加距离顶部的间距 */
  left: 12rpx; /* 增加距离左侧的间距 */
  width: 36rpx; /* 稍微减小尺寸 */
  height: 36rpx;
  z-index: 3; /* 确保在点赞容器之上 */
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.3)); /* 添加阴影效果 */
}

/* 心形点赞容器 - 优化位置和样式 */
.like-container {
  position: absolute;
  bottom: 12rpx; /* 移动到底部 */
  right: 12rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7); /* 增加背景透明度 */
  border-radius: 24rpx; /* 增加圆角 */
  padding: 8rpx 14rpx; /* 增加内边距 */
  z-index: 2;
  backdrop-filter: blur(8rpx); /* 添加背景模糊效果 */
  border: 1rpx solid rgba(255, 255, 255, 0.1); /* 添加细边框 */
}

.heart-icon {
  width: 22rpx; /* 稍微减小尺寸 */
  height: 22rpx;
  margin-right: 6rpx;
}

.like-count {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9); /* 增加文字对比度 */
  font-weight: 600; /* 增加字重 */
  min-width: 20rpx; /* 确保最小宽度 */
  text-align: center;
}

/* 空状态样式 - 优化版本 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx 80rpx; /* 减少上下内边距 */
  text-align: center;
  min-height: 60vh;
  background: radial-gradient(ellipse at center, rgba(255, 77, 148, 0.05) 0%, transparent 70%); /* 添加径向渐变背景 */
}

.empty-icon {
  font-size: 140rpx; /* 增大图标尺寸 */
  margin-bottom: 32rpx; /* 减少底部间距 */
  opacity: 0.8; /* 增加透明度 */
  background: linear-gradient(135deg, #ff4d94, #ff2d83); /* 添加渐变色 */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: pulse 2s ease-in-out infinite; /* 添加脉冲动画 */
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
}

.empty-title {
  font-size: 38rpx; /* 增大标题字号 */
  color: rgba(255, 255, 255, 0.95); /* 增加对比度 */
  font-weight: 700; /* 增加字重 */
  margin-bottom: 16rpx; /* 减少底部间距 */
  letter-spacing: 1rpx; /* 添加字间距 */
}

.empty-subtitle {
  font-size: 30rpx; /* 增大副标题字号 */
  color: rgba(255, 255, 255, 0.7); /* 调整透明度 */
  line-height: 1.6; /* 增加行高 */
  margin-bottom: 48rpx; /* 减少底部间距 */
  max-width: 520rpx; /* 增加最大宽度 */
  font-weight: 400;
}

.empty-button {
  background: linear-gradient(135deg, #ff4d94 0%, #ff2d83 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 56rpx; /* 增加内边距 */
  font-size: 34rpx; /* 增大字号 */
  font-weight: 700; /* 增加字重 */
  box-shadow: 0 12rpx 32rpx rgba(255, 77, 148, 0.4); /* 添加阴影 */
  transition: all 0.3s ease; /* 添加过渡效果 */
  position: relative;
  overflow: hidden;
}

/* 按钮悬停效果 */
.empty-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 148, 0.3);
}

/* 按钮光泽效果 */
.empty-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.empty-button:active::before {
  left: 100%;
}

/* 底部分享区域 */
.bottom-share-section {
  margin-top: 60rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 77, 148, 0.1) 0%, rgba(255, 45, 131, 0.1) 100%);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 77, 148, 0.2);
}

.share-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.share-title {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  margin-bottom: 10rpx;
}

.share-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
}

.main-share-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff4d94 0%, #ff2d83 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 148, 0.3);
  transition: all 0.3s ease;
}

.main-share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 148, 0.3);
}

.btn-share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.btn-share-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}