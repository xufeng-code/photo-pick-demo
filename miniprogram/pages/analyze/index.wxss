.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  align-items: center;
  justify-content: center;
}

.card {
  width: 100%;
  max-width: 686rpx;
  background-color: #1A1A1A;
  border-radius: 24rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.progress-container {
  width: 100%;
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-bar-fill {
  height: 100%;
  background-color: #FF2D83;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.text-container {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.percent-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.detail-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 20rpx;
  flex-shrink: 1;
}