/**index.wxss**/
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000000;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading text {
  color: #FFFFFF;
  font-size: 28rpx;
  opacity: 0.8;
}
