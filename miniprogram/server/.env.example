# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 服务器配置
NODE_ENV=production
PORT=5000

# AI 服务配置
# 通义千问 API 配置
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/multimodal-generation/generation

# 数据库配置
DATABASE_URL=./database/app.db

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp

# 安全配置
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Vercel 特定配置
VERCEL_URL=https://xuanzhaopian-ai.vercel.app
VERCEL_ENV=production

# 微信小程序配置
WECHAT_APPID=your_wechat_appid_here
WECHAT_SECRET=your_wechat_secret_here